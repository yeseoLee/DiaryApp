<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faded_green">
    <!-- ********************Middle Section*************************** -->
    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_home"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/outline_home_black_48"
            android:background="@color/faded_green"
            android:layout_alignParentStart="true"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/outline_settings_black_48"
            android:background="@color/faded_green"
            android:layout_alignParentEnd="true"
            android:layout_width="36dp"
            android:layout_height="36dp"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/relLayout1"
        android:padding="20dp"
        android:background="@drawable/white_grey_border_bottom">
        <TextView
            android:id="@+id/textname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mitch"
            android:textColor="@color/black"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textSize="32sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="오늘의 OO의 사진을 기록해보세요!"
            android:textColor="@color/link_blue"
            android:fontFamily="@font/cafe24oneprettynight"
            android:textSize="16sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linLayout2"
        android:layout_marginBottom="50dp"
        >
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:columnWidth="90dp"
            android:horizontalSpacing="0dp"
            android:verticalSpacing="0dp"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            >
        </GridView>
    </RelativeLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/outline_add_black_48"
        android:contentDescription="hi"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_margin="16dp" />

</RelativeLayout>