<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/faded_green"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/menuSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="272dp"
        android:fontFamily="@font/cafe24oneprettynight"
        android:layout_toStartOf="@+id/setting_button"
        />

    <ImageButton
        android:id="@+id/setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/faded_green"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:srcCompat="@drawable/outline_settings_black_48" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_pager"
        android:layout_width="365dp"
        android:layout_height="332dp"
        android:layout_above="@+id/main_textView"
        android:background="@color/faded_green"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="57dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never" />

    <TextView
        android:id="@+id/main_textView"
        android:layout_width="334dp"
        android:layout_height="162dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/background_main_add_photo"
        android:gravity="center_horizontal"
        android:text="오늘의 사진을 기록해보세요"
        android:fontFamily="@font/cafe24oneprettynight"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="296dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/main_textView"
        android:layout_alignTop="@+id/main_textView"
        android:layout_alignEnd="@+id/main_textView"
        android:layout_alignBottom="@+id/main_textView"
        android:layout_marginStart="21dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/background_main_add_button"
        android:fontFamily="@font/cafe24oneprettynight"
        android:text="OK" />


</RelativeLayout>